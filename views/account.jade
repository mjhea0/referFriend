extends layout

block content
  h1= title
  p.lead Welcome, #{username}. Please fill out the form to generate a unique ID
  a(href="/logout") Logout
  br
  br
  form(role='form', action="/account",method="post", style='max-width: 300px;')
    .form-group
        input.form-control(type='text', name="name", placeholder="Enter your friend's Name")
    .form-group
      input.form-control(type='email', name="email", placeholder="Enter your friend's Email")
      input(type="hidden", name="refererEmail",value= '#{email}')
    button.btn.btn-primary(type='submit') Generate
  br
  p.lead Refer Info
  email= newEmail
