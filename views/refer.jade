!!! 5
html
  head
    title= title
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='/css/bootstrap.min.css', rel='stylesheet', media='screen')
  body
  .container              
    h1 Refer a Friend!
    p.lead Say something worthwhile here.
    a(href="/") Go home
    br
    a(href="/ping") Ping
    br
    br
    if (!user)
      a(href="/login") Login
      br
      a(href="/register") Register
    if (user)
      p You are currently logged in as #{user.username}
      a(href="/logout") Logout
    br
    br
    form(role='form', action="/generate",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="name", placeholder='Enter Name')
      .form-group
        input.form-control(type='email', name="email", placeholder='Enter Email')
      button.btn.btn-default(type='submit') Generate
      &nbsp;
      a(href='/')
        button.btn.btn-primary(type="button") Cancel

  script(src='http://code.jquery.com/jquery.js')
  script(src='js/bootstrap.min.js')
